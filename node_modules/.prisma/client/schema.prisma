datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  FARMER
  PROCESSOR
  DISTRIBUTOR
  RETAILER
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  batches Batch[]
}

model Batch {
  id             Int     @id @default(autoincrement())
  productName    String
  productType    String
  quantity       String?
  unit           String?
  weight         Float
  weightUnit     String
  farmName       String
  location       String
  harvestDate    String?
  description    String?
  certifications Json?

  createdBy Int
  user      User @relation(fields: [createdBy], references: [id])

  qrCode QRCode?
  events Event[]

  createdAt DateTime @default(now())
}

model Event {
  id          Int     @id @default(autoincrement())
  batchId     Int
  eventType   String
  description String
  location    String
  timestamp   String
  actor       String
  temperature String?
  humidity    String?
  notes       String?

  batch Batch @relation(fields: [batchId], references: [id])

  createdAt DateTime @default(now())
}

model QRCode {
  id      Int    @id @default(autoincrement())
  batchId Int    @unique
  url     String
  hash    String

  batch Batch @relation(fields: [batchId], references: [id])
}
